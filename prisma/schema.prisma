// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id          Int       @id @default(autoincrement())
  recipientId Int
  content     String
  category    String
  createdAt   DateTime  @default(now())
  readAt      DateTime?

  @@index([recipientId])
  @@map("notifications")
}
